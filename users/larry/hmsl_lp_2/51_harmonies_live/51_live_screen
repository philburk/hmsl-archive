\ 51 live control grid screenanew task-51_live_screen: CG-VOICE.LOUDNESS.FUNCTION { val part -- }	val part to: voice-loudness;: BUILD.CG-VOICE-LOUDNESS	1 #-voices new: cg-voice-loudness	225 225 put.wh: cg-voice-loudness	100 -1 put.max: cg-voice-loudness	0 -1  put.min:  cg-voice-loudness	#-voices 0 DO		i at: voice-loudness		i put.value: cg-voice-loudness	LOOP	'c cg-voice.loudness.function  put.down.function: cg-voice-loudness	'c cg-voice.loudness.function  put.up.function: cg-voice-loudness	'c cg-voice.loudness.function  put.move.function: cg-voice-loudness	10 put.text.size: cg-voice-loudness	stuff{ " perc. " "  arps "  " accents " " chords " " mel 1" " mel 2 "	}stuff.text: cg-voice-loudness;: CG-VOICE-PRESETS.FUNCTION { val part -- }	val part #-presets /mod swap	ed.to: 51-presets;: BUILD.CG-VOICE-PRESETS { | voice preset -- }	 #-presets #-voices new: cg-voice-presets	225 225 put.wh: cg-voice-presets	100 -1 put.max: cg-voice-presets	0 -1 put.min: cg-voice-presets	#-voices #-presets * 0 	DO		i #-presets /mod (  -- pres voice ) 		swap ed.at: 51-presets 		i put.value: cg-voice-presets	LOOP	'c cg-voice-presets.function put.down.function: cg-voice-presets	'c cg-voice-presets.function put.up.function: cg-voice-presets	'c cg-voice-presets.function put.move.function: cg-voice-presets	10 put.text.size: cg-voice-presets	stuff{ " perc. " "  arps "  " accents " " chords " " mel 1" " mel 2 "	}stuff.text:  cg-voice-presets;: CG-ARP-PULSE.FUNCTION { val part -- }	part 0= 	IF		val ->  mm-marking		mm-marking mm->pulse -> arp-pulse	ELSE		val time-advance !	THEN;: BUILD.CG-ARP-PULSE	1 2 new: cg-arp-pulse	250 250 put.wh: cg-arp-pulse	360 0 put.max: cg-arp-pulse	200 0 put.min: cg-arp-pulse	180 1 put.max: cg-arp-pulse	3 1 put.min: cg-arp-pulse	mm-marking 0 put.value: cg-arp-pulse	time-advance @ 1 put.value: cg-arp-pulse	'c cg-arp-pulse.function put.down.function: cg-arp-pulse	'c cg-arp-pulse.function put.up.function: cg-arp-pulse	'c cg-arp-pulse.function put.move.function: cg-arp-pulse	12 put.text.size: cg-arp-pulse	stuff{ " MM " " event buffer " }stuff.text: cg-arp-pulse;: CG-VOICES-ON.FUNCTION { val part  -- }	val part to: voices-on?;: BUILD.CG-VOICES-ON	1 #-voices new: cg-voices-on	440 250 put.wh: cg-voices-on	#-voices 0 DO		i at: voices-on? i put.value: cg-voices-on	LOOP	'c cg-voices-on.function put.down.function: cg-voices-on	'c cg-voices-on.function put.up.function: cg-voices-on	'c cg-voices-on.function put.move.function: cg-voices-on	10 put.text.size: cg-voices-on	" on/off " put.title: cg-voices-on	stuff{ " perc. " "  arps "  " accents " " chords " " mel 1" " mel 2 "	}stuff.text: cg-voices-on;: CG-VOICES-ON.FUNCTION { val part  -- }	val part to: voices-on?;: BUILD.51.CONTROLS	0 scg.selnt	51-screen default-screen !	"     51 Live Screen " Put.title: 51-screen	6 3 new: 51-screen	cg-voices-on 900 1500 add: 51-screen	cg-voice-loudness 500 1500 add: 51-screen	cg-arp-pulse 800 500 add: 51-screen	cg-voice-presets 2000 500 add: 51-screen;: INIT.51-SCREEN	build.cg-arp-pulse	build.cg-voices-on	build.cg-voice-loudness	build.cg-voice-presets	build.51.controls	;: TERM.51-SCREEN	freeall: 51-screen	free: 51-screen;