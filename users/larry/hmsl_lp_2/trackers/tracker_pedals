\ foot pedal and reverb pedal fileanew task-tracker_pedals\ switch is set to switch 8, controller 65v: is-recording? 0 is-recording? !: SWITCH->RECORD { c-# val -- }	c-# switch_control = val 0= not and	IF		is-recording? @ 0=		IF			true is-recording? !			." Recording from pedal " cr			cg-tracker.rec.function 		ELSE			false is-recording? !			cg-tracker.stop.function		THEN	THEN;v: preset-index0 preset-index !: SWITCH->REVERB { c-# val -- } 	c-# switch_control = val 0= not and	IF		2 midi.channel!		preset-index @ 1+ preset-index !		preset-index @		#_reverb_presets 1+ mod		dup 0 put.value: cg-reverb		2 midi.channel!		1+ midi.preset	THEN;: CG-PEDAL-FUNCTION.FUNCTION { val part -- }	part 0=	IF		false pedal-reverb? !		'c switch->record mp-control-vector !	ELSE		true pedal-reverb? !		'c switch->reverb mp-control-vector !	THEN;: BUILD.CG-PEDAL-FUNCTION	2 1 new: cg-pedal-function	350 350 put.wh: cg-pedal-function	9 put.text.size: cg-pedal-function	'c cg-pedal-function.function put.down.function: cg-pedal-function	stuff{ " rcrd " " rvb " }stuff.text: cg-pedal-function	" Switch Function" put.title: cg-pedal-function;