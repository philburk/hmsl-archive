\ Various test to see if multitasker s working.ANEW TASK-TEST_MULTITASKvariable xvariable y: TMT.EXEC.ONCE ( -- )	::co		who @ y !	;;co;: tmt.loop.fast  ( -- , loop as fast as possible )	::co who @ ..@ CB_active y !		begin			1 x +!			pause		again	;;co;	: tmt.loop.slow ( -- , loop slowly )::co	 begin	  1 x +!	  20 sleep.for	again;;co;: tmt.sleep.once ( dt -- , test different times to sleep ) ::co [ 1 params ]	who @ y !	1 x +! 	dup sleep.for;;co;\ Below are examples of how to use the in line process definition feature.10 array counters: tmt.many		\ processes that run until being killed	 10 0 do 0 i counters ! loop	::co begin 1 0 counters +!  pause again ;;co	::co begin 2 1 counters +!  pause again ;;co	::co begin 4 2 counters +!  pause again ;;co	::co begin 8 3 counters +!  pause again ;;co	::co begin 16 4 counters +! pause again ;;co;: TMT.WATCH	BEGIN		10 0 do i counters @ 4 .r 2 spaces loop cr		PAUSE		?terminal	UNTIL;if.forgotten kill.all.processes